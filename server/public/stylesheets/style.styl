.fb-title
    h1
        font-size:54px;
        line-height:50px;
        margin-bottom:10px;
        font-weight:normal;
    .path
        color:#BBB;
.fb-page 
    margin-bottom:10px;
    position: relative;
    h3
        background:#29c2bd;
        border: 2px solid #000;
        padding:10px;
        color: #fff;
        border-radius:5px 5px 0 5px;
    .version
        border:#999 2px solid;
        border-radius:0 0 5px 5px;
        border-top: 0;
        margin-left:100px;
        position: relative;
        a.version_no
            background:#d3e9f4;
            color:#3898be;
            display:block;
            font-size:16px;
            padding:5px;
            &:hover 
                background:#f2f2f2;
        
    .options
        position: absolute;
        right: 16px;
        top: 12px;
    .versions
        list-style: none;
        margin:0;