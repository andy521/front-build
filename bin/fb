#!/usr/bin/env node
var fs = require('fs'),
	argv = require('optimist')
		.demand(1)
		.usage('$0 init \n$0 add {pagename}')
		.string('_')
		.argv,
	cwd = process.cwd(),
	FrontBuild = require('../lib/'),
	getRoot = require('../lib/getRoot');

function cb_all(err) {
	if(err) {
		console.log(err.message);
		console.log('fail');
		process.exit(1);
		return;
	}
	console.log('success');
	process.exit(0);
}

getRoot(function (err, root) {
	if (err) {
		console.log(err);
		process.exit(1);
	}

	if (argv._[0] === 'init' && root) {
		console.log('已经是一个工作目录了');
		process.exit(2);
	}

	switch(argv._[0]) {
		case 'init':
			FrontBuild.init(cwd, cb_all);
			break;
		case 'add':
			FrontBuild.add(argv._[1], root, cb_all);
			break;
		case 'version':
			FrontBuild.version(argv, root, cb_all);
			break;
		case 'build':
			argv = require('optimist')
				.string('v')
				.string('t')
				.alias('t', 'timestamp')
				.alias('v', 'version')
				.argv
			FrontBuild.build(argv, root, cb_all);
	}
});
